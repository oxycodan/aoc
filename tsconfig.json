{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "target": "ES2020",
        "moduleResolution": "node",
        "lib": [
            "es2020",
            "dom"
        ],
        "strict": true,
        "esModuleInterop": true,
        "paths": {
            "@impl/*": ["./src/impl/*"],
            "@src/*": ["./src/*"],
        },
        "declaration": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}